{
  "type": "postgres",
  "host": "localhost",
  "port": 5432,
  "username": "postgres",
  "password": "",
  "database": "natsuki",

  "synchronize": true,
  "logging": false,
  "entities": [
    "./node_modules/@natsuki/db/dist/entity/**/*.js"
  ],
  "migrations": [
    "src/migrations/**/*.ts"
  ],
  "subscribers": [
    "src/subscribers/**/*.ts"
  ],
  "cli": {
    "entitiesDir": "src/entities",
    "migrationsDir": "src/migrations",
    "subscribersDir": "src/subscribers"
  },
  "cache": {
    "type": "redis",
    "duration": 60000,
    "options": {
      "host": "localhost",
      "port": 6379
    }
  }
}